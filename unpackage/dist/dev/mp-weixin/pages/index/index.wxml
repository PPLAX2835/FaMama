<view><view class="content"><view class="player-videodisc"><image src="../../static/record.png"></image><image class="rotateImg" style="{{(styleObj)}}" src="{{audioData[0].view_image}}"></image></view><view class="player-box"><view class="player-slider"><view class="player-currentTime">{{''+audioCurTime[0]+":"+audioCurTime[1]+''}}</view><slider class="slider" min="0" max="{{duration}}" value="{{currentTime}}" activeColor="#ccc" backgroundColor="#eee" block-size="16" data-event-opts="{{[['change',[['changeProgress',['$event']]]]]}}" bindchange="__e"></slider><view class="player-duration">{{''+longth+''}}</view></view><view class="play-bar"><view data-event-opts="{{[['tap',[['pre',['$event']]]]]}}" bindtap="__e"><text class="cuIcon-backwardfill" style="color:#ccc;"></text></view><view class="play-menu"><text data-event-opts="{{[['tap',[['playMusic',['$event']]]]]}}" class="{{['cuIcon-playfill',isPlay?'cuIcon-stop':'cuIcon-playfill']}}" style="color:#ccc;" bindtap="__e"></text></view><view data-event-opts="{{[['tap',[['next',['$event']]]]]}}" bindtap="__e"><text class="cuIcon-play_forward_fill" style="color:#ccc;"></text></view></view></view></view><view class="play-list"><view style="position:relative;">播放列表<view class="text-underline"></view></view></view><block wx:for="{{audioData}}" wx:for-item="item" wx:for-index="index"><view data-event-opts="{{[['tap',[['changeAudio',['$0'],[[['audioData','',index]]]]]]]}}" class="play-list-content" bindtap="__e"><view class="play-list-content-title">{{''+item.name+''}}</view><view class="play-list-content-desc"><text>{{item.longth}}</text><text>|</text><text>{{item.num+"人学过"}}</text></view></view></block></view>